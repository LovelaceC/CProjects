CC=gcc

FLAGS= #-Wall -Werror -std=gnu99
LIBS=-lm -lGL -lglut -lX11 -lGLEW

OUT=a.out

FILES=build/main.o build/utils/math.o build/utils/util.o

all: $(FILES)
	$(CC) $(FLAGS) $(FILES) -o $(OUT) $(LIBS)

build/main.o: src/main.c
	$(CC) $(FLAGS) $< -c -o $@ $(LIBS)

build/utils/math.o: src/utils/math.c
	$(CC) $(FLAGS) $< -c -o $@ $(LIBS)

build/utils/util.o: src/utils/util.c
	$(CC) $(FLAGS) $< -c -o $@ $(LIBS)

run:
	$(OUT)

clean:
	rm $(FILES)
	rm $(OUT)
